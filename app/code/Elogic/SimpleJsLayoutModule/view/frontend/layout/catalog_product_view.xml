        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View\Description" name="yurec.uicomponent.jsLayout" template="Elogic_SimpleJsLayoutModule::custom2.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="startSimpleLayout" xsi:type="array">
                                <item name="component" xsi:type="string">Elogic_SimpleJsLayoutModule/js/koScript2</item>
                                <item name="config" xsi:type="array">
                                    <item name="titleMessage" xsi:type="string">hello from js layout</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
